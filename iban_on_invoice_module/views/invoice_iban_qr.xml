<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="account_invoice_report_template" inherit_id="account.report_invoice_document">
		<xpath expr="//div[@t-field='o.invoice_payment_term_id.note']" position="before">
			<div t-if="o.move_type == 'out_invoice' and o.name and o.company_id.iban_qr_number" style="display:flex;flex-direction:row">
				<div style="width: 100px; height: 100px;">
					<p t-field="o.qr_image" t-options='{"widget": "image"}'
						style="border: 1px solid lightgray; border-radius: 5px; padding: 2px;" />

					<p class="text-center" style="font-size: 7px; margin-top: -10px;">Scan QR with
						banking app.</p>
				</div>
				<div style="margin-left: 1rem;">
					<p>IBAN acount number<span t-field="o.company_id.iban_qr_number.acc_number" /></p>
					<p>BIC bank identifier<span t-field="o.company_id.iban_qr_number.bank_id.bic" /></p>
				</div>
			</div>
			<br />
		</xpath>
	</template>
</odoo>